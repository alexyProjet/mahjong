<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>accueil</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.accueil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createLobby</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.createLobby</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lobby</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.lobby</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>joinLobby</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.joinLobby</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>joinPrivateLobby</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.joinPrivateLobby</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>game</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.game</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tutorial</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.tutorial</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createPlayer</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.createPlayer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>displayParameters</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.displayParameters</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>credits</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.credits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>endGame</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.endGame</servlet-class>
    </servlet>
     <!-- Initialisation simple -->
    <servlet>
        <servlet-name>SimpleInitServlet</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.SimpleInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>setReady</servlet-name>
        <servlet-class>fr.univubs.inf1603.mahjong.interfaces.web.servlets.setReady</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createLobby</servlet-name>
        <url-pattern>/createLobby</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lobby</servlet-name>
        <url-pattern>/lobby</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>joinLobby</servlet-name>
        <url-pattern>/joinLobby</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>joinPrivateLobby</servlet-name>
        <url-pattern>/joinPrivateLobby</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>game</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tutorial</servlet-name>
        <url-pattern>/tutorial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createPlayer</servlet-name>
        <url-pattern>/createPlayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>displayParameters</servlet-name>
        <url-pattern>/displayParameters</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>credits</servlet-name>
        <url-pattern>/credits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>endGame</servlet-name>
        <url-pattern>/endGame</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>setReady</servlet-name>
        <url-pattern>/setReady</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
